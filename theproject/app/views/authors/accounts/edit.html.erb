<% if flash.any? %>
	<% flash.keys.each do |key| %>
<div class="alert alert-<%= key.to_s %> alert-dismissible " role="alert">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
		  </button>
			<p><%= flash[key] %></p>  
			</div>
			<% end %>
				<% end %>
	<%= form_tag authors_info_path, class: "ui form",method: :put do %>
	 <%= fields_for :author do |f| %>
	  <%= image_tag(current_author.gravatar_image_url, class: 'img-thumbnail') %>
			<h6>"<%= current_author.name %>"</h6>
				<h6><%= current_author.bio %></h6>	

<!-- JARAK -->
<div class="form-group">
  <div class="col-sm-5">
    <div class="field">
    <%= f.text_field :name, class: 'form-control form-control-sm', placeholder: 'Nama lengkap...' %>
	</div>
	<div class="field">
    <%= f.text_area :bio, class: 'form-control form-control-sm', placeholder: 'Biomu...' %>
</div>
<div class="field">
	<%= f.text_field :email, class: 'form-control form-control-sm', value: current_author.email, placeholder: 'Email...' %>
    </div>
    <%= f.submit "Update", class: 'btn btn-outline-dark btn-sm' %>
  	</div> 
</div>
 <% end %>
  <% end %>

