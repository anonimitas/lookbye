<h1 style="text-align: center; margin:10px;"><b>Artikel List </b></h1>
  <div class="row">
    <table class="table table-striped"> 
    <tr>
     <% @stipes.each do |stipe| %>
      <td><h5>Judul></h5></td>
  <td><%= stipe.title %></td>
   <td><%= link_to 'Lihat', stipe, class: 'btn btn-outline-dark btn-sm' %></td> 
    <td><%= link_to 'Edit', edit_authors_stipe_path(stipe), class: 'btn btn-warning btn-sm' %></td>
     <td><%= link_to 'Hapus', authors_stipe_path(stipe), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %></td>
  </tr>
     </div>
   <% end %>
   </table>
<%= link_to 'Article Baru', new_authors_stipe_path, class: 'btn btn-success btn-sm' %>

  