<!-- Box Content -->
<div class="my-3 p-3 bg-white rounded box-shadow">
	<h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
		<% @stipes.each do |stipe| %>
        	<div class="media text-muted pt-3">
        		<%= link_to stipe do %>
		          <%= image_tag stipe.image.url(:medium), class: 'mr-2 rounded', style: 'width:50px;', height: '50px;' %>
				    <% end %>
          	<p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            	<strong class="d-block text-gray-dark"><%= link_to stipe.title, stipe %></strong>
           			<strong class="d-block text-gray-dark"><%= raw stipe.tags.map{|t| link_to t.name ,stipes_path(tag: t.name ), class: 'sel' }.join(', ') %></strong>
			          <script>
						$( ".sel" ).css( "color", "#868e96" );
						</script></br>
				<%= truncate(stipe.description, length:100) %>
				</br>
				<%= link_with_icon(:eye, '', stipe, style:'color:#0a2935db;') %>
				</p>
	</div>
        <% end %>
			</div>
